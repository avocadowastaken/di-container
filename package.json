{
  "name": "create-di-container",
  "version": "0.0.0",
  "description": "Tiny ES6-friendly dependency injection container",
  "repository": "git@github.com:umidbekkarimov/di-container.git",
  "license": "MIT",
  "author": "Umidbek Karimov <uma.karimov@gmail.com>",
  "main": "index.js",
  "scripts": {
    "pub": "pika-pack publish",
    "build": "pika-pack build --publish",
    "lint": "prettier . --check",
    "test": "jest --coverage",
    "ci": "yarn lint && yarn tsc && yarn test"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "7.14.5",
    "@babel/preset-env": "7.15.0",
    "@babel/preset-typescript": "7.15.0",
    "@pika/pack": "0.5.0",
    "@pika/plugin-build-node": "0.9.2",
    "@pika/plugin-build-types": "0.9.2",
    "@pika/plugin-build-web": "0.9.2",
    "@pika/plugin-standard-pkg": "0.9.2",
    "@types/jest": "27.0.1",
    "jest": "27.1.0",
    "prettier": "2.3.2",
    "prettier-plugin-organize-imports": "2.3.3",
    "prettier-plugin-packagejson": "2.2.11",
    "typescript": "4.4.2"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "**/__tests__/**"
          ]
        }
      ],
      [
        "@pika/plugin-build-node",
        {
          "minNodeVersion": 8
        }
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types",
        {
          "tsconfig": "./tsconfig.typings.json"
        }
      ]
    ]
  }
}

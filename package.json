{
  "name": "create-di-container",
  "version": "0.1.0",
  "description": "Tiny ES6-friendly dependency injection container",
  "repository": "git@github.com:umidbekk/di-container.git",
  "license": "MIT",
  "author": "Umidbek Karimov <uma.karimov@gmail.com>",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rapidbundle",
    "lint": "prettier . --check",
    "prerelease": "npm i && npm run lint && npx tsc && npm run build",
    "release": "np --no-2fa",
    "test": "jest --coverage"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "esbuild-jest",
        {
          "sourcemap": true
        }
      ]
    }
  },
  "devDependencies": {
    "@types/jest": "27.0.3",
    "esbuild-jest": "0.5.0",
    "jest": "27.4.3",
    "np": "7.6.0",
    "prettier": "2.5.1",
    "prettier-plugin-organize-imports": "2.3.4",
    "prettier-plugin-packagejson": "2.2.15",
    "rapidbundle": "0.15.0",
    "typescript": "4.6.2"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=7"
  }
}
